<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="medium_create_post_publication"
       startOnLoad="true"
       statistics="disable"
       trace="disable"
       transports="http,https">
<target>
    <inSequence>
        <property expression="json-eval($.access_token)"
                  name="access_token"
                  scope="default"
                  type="STRING"/>
        <property expression="json-eval($.publicationId)"
                  name="publicationId"
                  scope="default"
                  type="STRING"/>
        <medium.createPostUnderPublication>
            <access_token>{$ctx:access_token}</access_token>
            <publicationId>{$ctx:publicationId}</publicationId>
        </medium.createPostUnderPublication>
        <respond/>
    </inSequence>
    <outSequence>
        <log/>
        <send/>
    </outSequence>
</target>
<description/>
</proxy>
